# Questions: each question has 4 options and the correct answer
questions = [
    {
        "q": "Who has scored the most runs in ODI cricket?",
        "options": ["Sachin Tendulkar", "Virat Kohli", "Ricky Ponting", "Brian Lara"],
        "answer": "Sachin Tendulkar"
    },
    {
        "q": "Who has taken the most wickets in Test cricket?",
        "options": ["Muttiah Muralitharan", "Shane Warne", "Anil Kumble", "James Anderson"],
        "answer": "Muttiah Muralitharan"
    },
    {
        "q": "Which team won the 2019 Cricket World Cup?",
        "options": ["India", "England", "New Zealand", "Australia"],
        "answer": "England"
    },
    {
        "q": "Who is known as the 'Rawalpindi Express'?",
        "options": ["Wasim Akram", "Waqar Younis", "Imran Khan", "Shoaib Akhtar"],
        "answer": "Shoaib Akhtar"
    },
    {
        "q": "Which player scored the first double century in ODI cricket?",
        "options": ["Rohit Sharma", "Sachin Tendulkar", "Virender Sehwag", "Martin Guptill"],
        "answer": "Sachin Tendulkar"
    }
]

lifelines = ["50:50"]
score = 0

def use_5050(question):
    correct = question["answer"]
    options = question["options"]
    wrong_options = [opt for opt in options if opt != correct]
    removed = random.sample(wrong_options, 2)
    new_options = [opt for opt in options if opt not in removed]
    print("Options after 50:50 lifeline:")
    for idx, opt in enumerate(new_options):
        print(f"{chr(65+idx)}. {opt}")
    return new_options

print("Welcome to Cricket Kaun Banega Crorepati!")
print("You have one lifeline: 50:50")
print("Answer questions by typing A, B, C, or D.\n")

for i, q in enumerate(questions, 1):
    print(f"Q{i}: {q['q']}")
    for idx, opt in enumerate(q["options"]):
        print(f"{chr(65+idx)}. {opt}")

    if lifelines:
        use_life = input("Do you want to use 50:50 lifeline? (yes/no): ").strip().lower()
        if use_life == "yes":
            lifelines.remove("50:50")
            options_to_use = use_5050(q)
        else:
            options_to_use = q["options"]
    else:
        options_to_use = q["options"]

    answer = input("Your answer: ").strip()
    correct_answer = q["answer"]

    # Map user input to option text
    mapping = {chr(65+idx): opt for idx, opt in enumerate(options_to_use)}
    if answer.upper() in mapping and mapping[answer.upper()] == correct_answer:
        print("Correct!\n")
        score += 1
    else:
        print(f"Wrong! The correct answer was: {correct_answer}\n")
        break

print(f"Game Over! Your score: {score}/{len(questions)}") 
